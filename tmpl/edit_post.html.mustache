<!doctype html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="/css/base.css">
        <link rel="stylesheet" href="/css/skeleton.css">
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/pagedown.css">
        <script type="text/javascript" src="/js/Markdown.Converter.js"></script>
        <script type="text/javascript" src="/js/Markdown.Sanitizer.js"></script>
        <script type="text/javascript" src="/js/Markdown.Editor.js"></script>
        <script type="text/javascript" src="/js/jquery-1.9.1.min.js"></script>
        <title>{{{PageTitle}}}</title>
        <style>
        #upload-progress-section p {
            display: block;
            width: 240px;
            padding: 2px 5px;
            margin: 2px 0;
            border: 1px inset #446;
            border-radius: 5px;
            background: #eee url("progress.png") 100% 0 repeat-y;
        }
        #upload-progress-section p.success {
            background: #0c0 none 0 0 no-repeat;
        }
        #upload-progress-section p.failed {
            background: #c00 none 0 0 no-repeat;
        }
        </style>
    </head>
    <body>
        <div class="container">
            <div id="header">
                <br />
                {{> header}}
            </div>
            <hr />
            <div id="subheader">
                <h3 class="alt">Subhello</h3>
            </div>

            <hr />
            <form
                action="submit_post"
                method="post"
                id="edit-post-form"
                >
            <div class="twelve columns content" id="content">
                <label for="post_title">Title:</label>
                <input
                    id="post_title"
                    type="text"
                    class="text"
                    name="title"
                    value="{{Title}}"
                    />
                <br />
                <label for="post_url">Url:</label>
                <input
                    id="post_url"
                    type="text"
                    class="text"
                    name="url"
                    value="{{Url}}"
                    />
                <br />
                <label for="post_tags">Tags:</label>
                <input
                    id="post_tags"
                    type="text"
                    class="text"
                    name="tags"
                    value="{{TagsWithUrls}}"
                    />
                <br />

                <div id="upload-progress-section"></div>
                <input type="button" value="Upload File" onclick="$('#fileid').click();" />

                <label class="twelve columns" for="wmd-input">Post text:</label>
                <div class="wmd-panel container">
                    <div class="row">
                        <div id="wmd-preview" class="wmd-preview twelve columns">
                        </div>
                    </div>
                    <div class="row">
                        <div id="wmd-button-bar">
                        </div>
                    </div>
                    <textarea
                        class="wmd-input twelve columns"
                        name="text"
                        id="wmd-input"
                        >{{{RawBody}}}</textarea>
                </div>
                <input
                    type="submit"
                    id="submit-post-edit"
                    value="Submit"
                    />
                <input id="fileid" type="file" name="file" style="visibility:hidden" />
            </div>
            </form>

            {{> sidebar}}

            <hr />
            <div id="footer" />
        </div>
        <script type="text/javascript">
        (function () {
             var converter = new Markdown.getSanitizingConverter();
             var editor = new Markdown.Editor(converter);
             editor.run();
             })();

        function makeCommentList(post) {
            var result = "";
            for (i in post.Comments) {
                var c = post.Comments[i];
                result += "<option value=\"" + c.Name + "\">" + c.RawBody + "</option>";
            }
            return result;
        }

        function retrieveComments(postUrl) {
            var xhr;
            try {
                xhr = new ActiveXObject('Msxml2.XMLHTTP');
            }
            catch (e) {
                try {
                    xhr = new ActiveXObject('Microsoft.XMLHTTP');
                }
                catch (e2) {
                    try {
                        xhr = new XMLHttpRequest();
                    }
                    catch (e3) {
                        xhr = false;
                    }
                }
            }

            xhr.onreadystatechange = function() {
                if(xhr.readyState == 4) {
                    if(xhr.status == 200) {
                        var post = JSON.parse(xhr.responseText);
                        document.getElementById('wmd-input').innerHTML = post.RawBody;
                        document.getElementById('comments_dropdown').innerHTML = makeCommentList(post);
                        document.getElementById('post-url').value = post.Url;
                    }
                    else {
                        document.getElementById('comments_dropdown').innerHTML = xhr.status;
                    }
                }
            };

            try {
                xhr.open("GET", "load_comments?post=" + postUrl, true);
                xhr.send(null);
            }
            catch (err) {
                alert("exc: " + err);
            }
        }

        (function() {
            var postTextarea = document.getElementById('wmd-input');
            var uploadNo = 0;
            var uploadSection = $('div#upload-progress-section');

            $('input#fileid').change(function() {
                var filename = $(this).val().split('\\').pop();
                if (!filename)
                    return;
                var formData = new FormData($('form')[0]);
                uploadSection.append(mkUploadHtml(filename, uploadNo));
                $.ajax({
                    url: 'upload_images',
                    type: 'POST',
                    xhr: function() {
                        myXhr = $.ajaxSettings.xhr();
                        if (myXhr.upload) {
                            var progrFunc = function(e) {
                                if (e.lengthComputable) {
                                    var p = $('#progress_' + uploadNo)[0];
                                    var pc = parseInt(100 - (e.loaded / e.total * 100));
                                    p.style.backgroundPosition = pc + "% 0";
                                }
                            }
                            myXhr.upload.addEventListener('progress', progrFunc, false);
                        }
                        return myXhr;
                    },
                    beforeSend: function() {
                    },
                    success: function(data, textStatus, jqXHR) {
                        postTextarea.innerHTML += "\n" + data;
                    },
                    error: function() {
                        $('#progress_' + uploadNo).html(xhr.responseText);
                    },
                    data: formData,
                    //Options to tell JQuery not to process data or worry about content-type
                    cache: false,
                    contentType: false,
                    processData: false
                });
                uploadNo += 1;
            });
        })();

        function mkUploadHtml(filename, uploadNo) {
            return '<p id="progress_' + (uploadNo + 1) + '">' + filename + '</p>';
        }
        </script>
    </body>
</html>
